{
    "name": "promisify-electron-ipc",
    "version": "1.0.0",
    "description": "Library to use promises for inter-process communication for electron.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "tsc",
        "test": "nyc mocha",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "**/*.d.ts"
        ],
        "all": true
    },
    "files": [
        "lib/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/D0miH/promisify-electron-ipc.git"
    },
    "author": "Dominik H. <https://github.com/D0miH>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/D0miH/promisify-electron-ipc/issues"
    },
    "homepage": "https://github.com/D0miH/promisify-electron-ipc#readme",
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/chai-as-promised": "^7.1.0",
        "@types/mocha": "^5.2.6",
        "@types/proxyquire": "^1.3.28",
        "@types/uuid": "^3.4.4",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "coveralls": "^3.0.3",
        "electron": "^4.1.3",
        "electron-ipc-mock": "0.0.3",
        "mocha": "^6.0.2",
        "nyc": "^13.3.0",
        "prettier": "^1.16.4",
        "proxyquire": "^2.1.0",
        "serialize-error": "^4.1.0",
        "sinon": "^7.3.1",
        "sinon-chai": "^3.3.0",
        "source-map-support": "^0.5.11",
        "ts-node": "^8.0.3",
        "tslint": "^5.14.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.4.1",
        "uuid": "^3.3.2"
    },
    "peerDependencies": {
        "electron": "^4.0.0"
    }
}
